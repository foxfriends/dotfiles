//    

layout {
    pane
    pane size=1 borderless=true {
        plugin location="file:/Users/cam/.dotfiles/zellij/layouts/../plugins/zjstatus.wasm" {
            format_left   "{mode}#[bg=black,fg=magenta] {session}  {tabs}"
            format_center ""
            format_right  "{command_git_branch}{datetime}"
            format_space  ""

            border_enabled  "false"
            border_char     "─"
            border_format   "#[fg=#abb2bf]{char}"
            border_position "top"

            hide_frame_for_single_pane "false"

            mode_normal  "#[bg=magenta,fg=black] norm#[bg=black,fg=magenta]"
            mode_tmux    "#[bg=yellow,fg=black] tmux#[bg=black,fg=yellow]"

            tab_normal   "#[fg=#abb2bf] {name} "
            tab_active   "#[fg=#98c378] {name} "

            command_git_branch_command     "git rev-parse --abbrev-ref HEAD"
            command_git_branch_format      "#[fg=#d19a66] {stdout} "
            command_git_branch_interval    "10"
            command_git_branch_rendermode  "static"

            datetime        "#[fg=cyan] {format} "
            datetime_format "%A, %d %b %Y %H:%M"
            datetime_timezone "Canada/Toronto"
        }
    }
}
