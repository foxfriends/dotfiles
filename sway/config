mode "nag" {
    bindsym {
        Ctrl+d mode "default"
        Ctrl+c $nag --exit
        q      $nag --exit
        Escape $nag --exit

        Return $nag --confirm
        $left  $nag --select prev
        $right $nag --select next
        Left   $nag --select prev
        Right  $nag --select next
    }
}

include /etc/sway/config.d/*
include ~/.config/sway/config.d/*
